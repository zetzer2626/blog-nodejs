<%- include('partials/header', {title: 'Edit Post'}) %>

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/posts/<%= post.id %>"><%= post.title %></a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit</li>
                </ol>
            </nav>
            
            <!-- Form -->
            <div class="card shadow">
                <div class="card-header">
                    <h2 class="mb-0">
                        <i class="bi bi-pencil"></i> Edit Post
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form action="/posts/<%= post.id %>?_method=PUT" method="POST">
                        <div class="mb-4">
                            <label for="title" class="form-label">
                                <i class="bi bi-type"></i> Post Title
                            </label>
                            <input type="text" class="form-control form-control-lg" id="title" name="title" 
                                   value="<%= post.title %>" required>
                        </div>
                        
                        <div class="mb-4">
                            <label for="author" class="form-label">
                                <i class="bi bi-person"></i> Author
                            </label>
                            <input type="text" class="form-control" id="author" name="author" 
                                   value="<%= post.author %>">
                        </div>
                        
                        <div class="mb-4">
                            <label for="content" class="form-label">
                                <i class="bi bi-file-text"></i> Content
                            </label>
                            <textarea class="form-control" id="content" name="content" rows="12" required><%= post.content %></textarea>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i> You can use line breaks to format your content.
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="/posts/<%= post.id %>" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Update Post
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Post Info -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Post Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Created:</strong> <%= post.date %>
                        </div>
                        <div class="col-md-6">
                            <strong>Post ID:</strong> #<%= post.id %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
