<%- include('partials/header', {title: post.title}) %>

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><%= post.title %></li>
                </ol>
            </nav>
            
            <!-- Blog Post -->
            <article class="card shadow">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <h1 class="card-title h2 mb-3"><%= post.title %></h1>
                            <div class="text-muted mb-3">
                                <i class="bi bi-person"></i> <%= post.author %>
                                <span class="mx-2">â€¢</span>
                                <i class="bi bi-calendar"></i> <%= post.date %>
                            </div>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/posts/<%= post.id %>/edit">
                                    <i class="bi bi-pencil"></i> Edit Post
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" class="d-inline">
                                        <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Are you sure you want to delete this post?')">
                                            <i class="bi bi-trash"></i> Delete Post
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="post-content">
                        <p class="card-text" style="white-space: pre-wrap;"><%= post.content %></p>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <a href="/" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-left"></i> Back to Posts
                            </a>
                        </div>
                        <div>
                            <a href="/posts/<%= post.id %>/edit" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit Post
                            </a>
                        </div>
                    </div>
                </div>
            </article>
            
            <!-- Related Posts or Comments Section -->
            <div class="mt-5">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-chat-dots"></i> Comments</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted text-center py-3">
                            <i class="bi bi-info-circle"></i> Comments feature coming soon!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
