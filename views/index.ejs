<%- include('partials/header', {title: 'Home'}) %>

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">Welcome to My Blog</h1>
                <p class="lead mb-4">Discover interesting articles, tutorials, and insights about web development, technology, and more.</p>
                <a href="/posts/new" class="btn btn-light btn-lg">
                    <i class="bi bi-plus-circle"></i> Write New Post
                </a>
            </div>
            <div class="col-lg-4 text-center">
                <i class="bi bi-journal-text display-1 opacity-75"></i>
            </div>
        </div>
    </div>
</div>

<!-- Blog Posts Section -->
<div class="container my-5">
    <div class="row">
        <div class="col-lg-8">
            <h2 class="mb-4">
                <i class="bi bi-newspaper"></i> Latest Posts
            </h2>
            
            <% if (posts.length > 0) { %>
                <% posts.forEach(function(post) { %>
                    <article class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h3 class="card-title h4">
                                    <a href="/posts/<%= post.id %>" class="text-decoration-none text-dark">
                                        <%= post.title %>
                                    </a>
                                </h3>
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/posts/<%= post.id %>">
                                            <i class="bi bi-eye"></i> View
                                        </a></li>
                                        <li><a class="dropdown-item" href="/posts/<%= post.id %>/edit">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" class="d-inline">
                                                <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Are you sure you want to delete this post?')">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            
                            <p class="card-text text-muted">
                                <%= post.content.length > 150 ? post.content.substring(0, 150) + '...' : post.content %>
                            </p>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-muted small">
                                    <i class="bi bi-person"></i> <%= post.author %> 
                                    <span class="mx-2">â€¢</span>
                                    <i class="bi bi-calendar"></i> <%= post.date %>
                                </div>
                                <a href="/posts/<%= post.id %>" class="btn btn-outline-primary btn-sm">
                                    Read More <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </article>
                <% }); %>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="bi bi-journal-x display-1 text-muted"></i>
                    <h3 class="text-muted mt-3">No posts yet</h3>
                    <p class="text-muted">Be the first to write a blog post!</p>
                    <a href="/posts/new" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create First Post
                    </a>
                </div>
            <% } %>
        </div>
        
        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> About This Blog</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">This is a simple blog application built with Node.js, Express, and Bootstrap. It demonstrates CRUD operations for blog posts.</p>
                    <a href="/about" class="btn btn-outline-primary btn-sm">Learn More</a>
                </div>
            </div>
            
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-stats"></i> Blog Stats</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-primary"><%= posts.length %></h4>
                            <small class="text-muted">Total Posts</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success">1</h4>
                            <small class="text-muted">Authors</small>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-link-45deg"></i> Quick Links</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <a href="/posts/new" class="text-decoration-none">
                                <i class="bi bi-plus-circle text-primary"></i> Write New Post
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="/about" class="text-decoration-none">
                                <i class="bi bi-info-circle text-info"></i> About Us
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="/contact" class="text-decoration-none">
                                <i class="bi bi-envelope text-warning"></i> Contact
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
