<%- include('partials/header', {title: 'Contact'}) %>

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Contact</li>
                </ol>
            </nav>
            
            <!-- Contact Content -->
            <div class="card shadow">
                <div class="card-body p-4">
                    <h1 class="display-4 text-center mb-4">
                        <i class="bi bi-envelope text-primary"></i> Contact Us
                    </h1>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h3><i class="bi bi-chat-dots"></i> Get in Touch</h3>
                            <p class="lead">
                                Have questions, suggestions, or just want to say hello? 
                                We'd love to hear from you!
                            </p>
                            
                            <div class="contact-info">
                                <div class="d-flex align-items-center mb-3">
                                    <i class="bi bi-envelope text-primary me-3 fs-4"></i>
                                    <div>
                                        <strong>Email</strong><br>
                                        <a href="mailto:contact@myblog.com" class="text-decoration-none">
                                            contact@myblog.com
                                        </a>
                                    </div>
                                </div>
                                
                                <div class="d-flex align-items-center mb-3">
                                    <i class="bi bi-telephone text-primary me-3 fs-4"></i>
                                    <div>
                                        <strong>Phone</strong><br>
                                        <a href="tel:+1234567890" class="text-decoration-none">
                                            +1 (234) 567-890
                                        </a>
                                    </div>
                                </div>
                                
                                <div class="d-flex align-items-center mb-3">
                                    <i class="bi bi-geo-alt text-primary me-3 fs-4"></i>
                                    <div>
                                        <strong>Address</strong><br>
                                        123 Blog Street<br>
                                        Web City, WC 12345
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <h3><i class="bi bi-send"></i> Send Message</h3>
                            <form>
                                <div class="mb-3">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="name" placeholder="Your name">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" placeholder="your@email.com">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="subject" class="form-label">Subject</label>
                                    <input type="text" class="form-control" id="subject" placeholder="Message subject">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control" id="message" rows="4" placeholder="Your message..."></textarea>
                                </div>
                                
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-send"></i> Send Message
                                </button>
                            </form>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="text-center">
                        <h3><i class="bi bi-share"></i> Follow Us</h3>
                        <p class="mb-4">Stay connected with us on social media</p>
                        
                        <div class="social-links">
                            <a href="#" class="btn btn-outline-primary me-2 mb-2">
                                <i class="bi bi-facebook"></i> Facebook
                            </a>
                            <a href="#" class="btn btn-outline-info me-2 mb-2">
                                <i class="bi bi-twitter"></i> Twitter
                            </a>
                            <a href="#" class="btn btn-outline-danger me-2 mb-2">
                                <i class="bi bi-instagram"></i> Instagram
                            </a>
                            <a href="#" class="btn btn-outline-primary me-2 mb-2">
                                <i class="bi bi-linkedin"></i> LinkedIn
                            </a>
                            <a href="#" class="btn btn-outline-dark mb-2">
                                <i class="bi bi-github"></i> GitHub
                            </a>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="text-center">
                        <h3><i class="bi bi-clock"></i> Business Hours</h3>
                        <div class="row">
                            <div class="col-md-6 mx-auto">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <td><strong>Monday - Friday</strong></td>
                                            <td>9:00 AM - 6:00 PM</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Saturday</strong></td>
                                            <td>10:00 AM - 4:00 PM</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Sunday</strong></td>
                                            <td>Closed</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
